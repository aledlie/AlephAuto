{
  "name": "alephauto",
  "version": "1.0.0",
  "description": "Node.js automation toolkit for managing code repositories at scale",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:doc-pipeline": "node data-discovery-report-pipeline.js",
    "start:gitignore-updater": "node gitignore-repomix-updater.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "node-cron": "^3.0.3",
    "@sentry/node": "^8.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.5.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "automation",
    "repomix",
    "schema.org",
    "gitignore",
    "documentation",
    "cron",
    "job-queue"
  ],
  "author": "Alyshia Ledlie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:aledlie/AlephAuto.git"
